{
    "name": "swp/updater-bundle",
    "type": "symfony-bundle",
    "description": "Provides integration for ahilles107/updater which gives an easy way to update your application.",
    "keywords": ["upgrading", "upgrade", "update", "autoupdate", "updater"],
    "license":"GPL-3.0",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Rafał Muszyński",
            "email": "rafal.muszynski@sourcefabric.org"
        }
    ],
    "require": {
        "php": ">=5.4",
        "symfony/framework-bundle": "~2.0",
        "friendsofsymfony/rest-bundle": "^1.7.1",
        "ahilles107/updater": "1.0.x-dev",
        "jms/serializer-bundle": "^1.0",
        "vierbergenlars/php-semver": "^3.0",
        "nelmio/api-doc-bundle": "@stable",
        "willdurand/hateoas-bundle": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5@stable",
        "phpunit/php-code-coverage": "@stable",
        "phpspec/phpspec": "~2.0",
        "akeneo/phpspec-skip-example-extension": "^1.2@dev"
    },
    "suggest": {
        "guzzlehttp/guzzle": "Allows to send more advanced HTTP requests (requires PHP >= 5.5.0)"
    },
    "autoload": {
        "psr-4": { "SWP\\UpdaterBundle\\": "" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
